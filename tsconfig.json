{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2019",
      "dom"
    ],
    "rootDirs": [
      "./src",
      "./tools"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "tools"
  ]
}
